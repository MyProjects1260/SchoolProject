<div class="container">
    <form action="Create" method="post">
        <div class="row">
            <div class="col-25">
                <label for="name">Student Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="StudentName" name="StudentName" placeholder="Your name ..." />
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="age">Age</label>
            </div>
            <div class="col-75">
                <input type="text" id="Age" name="StudentAge" placeholder="Your Age ..." />
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="status">Is Active</label>
            </div>
            <div class="col-75">
                <input type="checkbox" value="true" id="isactive" name="IsActive" checked>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save">
        </div>

    </form>
</div>


